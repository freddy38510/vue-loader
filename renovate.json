{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "schedule:weekly", "group:allNonMajor"],
  "labels": ["dependencies"],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchPackageNames": [
        "chalk",
        "webpack",
        "@types/webpack",
        "webpack-cli",
        "html-webpack-plugin"
      ],
      "allowedVersions": "<5"
    },
    {
      "matchPackageNames": ["ts-loader"],
      "allowedVersions": "<9"
    },
    {
      "matchPackageNames": ["mini-css-extract-plugin"],
      "allowedVersions": "<2"
    },
    {
      "matchPackageNames": ["style-loader"],
      "allowedVersions": "<3"
    }
  ]
}
